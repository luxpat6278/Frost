{
  "compilerOptions": {
    "target": "es2016",
    "lib": ["dom", "esnext"],
    "jsx": "react-jsx", 
    "module": "esnext", // Используем esnext для более лучшей работы с модулями
    "moduleResolution": "node",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "noEmit": true, // Прекращаем вывод js файлов, если не собираемся их генерировать
    "resolveJsonModule": true,
    "isolatedModules": true
  },
  "include": ["src"]
}